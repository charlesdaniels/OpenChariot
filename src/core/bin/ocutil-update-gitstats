#!/bin/sh

# update your gitstats static HTML pages.

HTML_OUT_DIR="$OC_WWW_ROOT/gitstats"

PATH=$PATH:/opt/cls/bin

export GNUPLOT_DEFAULT_GDFONT=LiberationSans-Regular
export GDFONTPATH=/usr/share/fonts/liberation

for repo in "$OC_GIT_DIR/"*.git ; do
	name=$(basename "$repo" .git)

	oc_log_info "Generatic gitstats page for repo '$name'."

	# validate that the repo is non-empty, which causes gitstats to hang
	if [ $(cd "$repo"; git show-ref | wc -l) == "0" ] ; then
		oc_log_warn "$repo seems to be empty, it will be skipped"
		continue
	fi

	OUT_DIR="$HTML_OUT_DIR/$name"
	mkdir -p "$OUT_DIR"
	oc_log_info "Processing repo $name..."
	gitstats "$repo" "$OUT_DIR"

	# copy CSS
	cp "$OC_CSS_FILE" "$OUT_DIR/gitstats.css"
done

oc_log_info "gitstats update complete"
